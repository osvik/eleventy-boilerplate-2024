<div id="thankspages" x-data="{ screen: 'thankyoupage'}" style="display:none;" aria-hidden="true">

    <section id="thankyoupage" x-show="screen === 'thankyoupage'" x-bind:aria-hidden="not(screen === 'thankyoupage')" x-transition.opacity.duration.200ms>
        {{ thank_you_screen | safe }}
        <button type="button" class="colored-button" x-on:click="screen = 'sharepage'; $dispatch('thankyou:buttons', { button: 'yes_to_share' });">{{ form.yes }}</button>
        <button type="button" class="colored-button" x-on:click="screen = 'givepage'; $dispatch('thankyou:buttons', { button: 'no_to_share' });">{{ form.no }}</button>
    </section>

