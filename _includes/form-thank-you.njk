        <button type="button" class="colored-button" x-on:click="screen = 'givepage'; $dispatch('thankyou:buttons', { button: 'skip_to_donations' });" >{{ form.skip }} Â»</button>
    </section>

    <section id="givepage" x-show="screen === 'givepage'" x-bind:aria-hidden="not(screen === 'givepage')" x-transition.opacity.duration.200ms>
        {{ want_to_give | safe }}
        <div style="margin: 25px 0;">
            <a href="{{ donate_page_url }}" class="colored-button" x-on:click.prevent="$dispatch('thankyou:buttons', { button: 'yes_to_give' }); await delay(1000); window.location.href = $el.getAttribute('href');">{{ form.donate }}</a>
        </div>
    </section>

</div>